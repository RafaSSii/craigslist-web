<div class="w-full flex flex-col">
  <h1 class="font-bold text-4xl">Explore Listings Nearby</h1>
  <%= form_with url: url_for, class: "w-full", method: :get do |form| %>
    <div class="flex w-full gap-2 items-end">
      <div class="flex flex-col max-w-sm w-full">
          <%= form.label :location, class: "block mb-2.5 text-sm font-medium text-heading" %>
          <%= form.text_field :location, class: "bg-gray-50 border border-gray-300 text-heading text-sm rounded-base focus:ring-brand focus:border-brand block w-full px-3 py-2.5 shadow-xs placeholder:text-body rounded-lg" %>
      </div>
      <%= form.submit "Search", class: "cursor-pointer text-white bg-blue-700 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800 shadow-lg shadow-blue-500/50 dark:shadow-lg dark:shadow-blue-800/80 font-medium rounded-base text-sm px-4 py-3 text-center leading-5 rounded-lg" %>
    </div>
  <% end %>

  <div id="map" class="w-full h-[70vh] bg-indigo-500 mt-4" data-controller="map"></div>
</div>
